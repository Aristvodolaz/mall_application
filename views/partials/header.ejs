<header class="header">
    <div class="container header-content">
        <a href="/" class="logo">
            <i class="bi bi-building"></i>
            ТРЦ "Кристалл"
        </a>
        
        <button class="mobile-menu-btn">
            <i class="bi bi-list"></i>
        </button>
        
        <nav>
            <ul class="nav-list">
                <li><a href="/" class="nav-link <%= path === '/' ? 'active' : '' %>">Главная</a></li>
                <li><a href="/cinema" class="nav-link <%= path.startsWith('/cinema') ? 'active' : '' %>">Кинотеатр</a></li>
                <li><a href="/map" class="nav-link <%= path === '/map' ? 'active' : '' %>">Карта ТЦ</a></li>
                <li><a href="/contacts" class="nav-link <%= path === '/contacts' ? 'active' : '' %>">Контакты</a></li>
            </ul>
        </nav>
        
        <div class="auth-buttons">
            <% if (user) { %>
                <div class="dropdown">
                    <button class="btn btn-outline dropdown-toggle">
                        <i class="bi bi-person-circle"></i>
                        <%= user.name %>
                    </button>
                    <div class="dropdown-menu">
                        <a href="/profile" class="dropdown-item">
                            <i class="bi bi-person"></i>
                            Профиль
                        </a>
                        <% if (user.role === 'admin') { %>
                            <a href="/admin" class="dropdown-item">
                                <i class="bi bi-gear"></i>
                                Админ панель
                            </a>
                        <% } %>
                        <a href="/cinema/tickets" class="dropdown-item">
                            <i class="bi bi-ticket-perforated"></i>
                            Мои билеты
                        </a>
                        <a href="/settings" class="dropdown-item">
                            <i class="bi bi-gear"></i>
                            Настройки
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="/logout" class="dropdown-item text-danger">
                            <i class="bi bi-box-arrow-right"></i>
                            Выход
                        </a>
                    </div>
                </div>
            <% } else { %>
                <a href="/login" class="btn btn-outline">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Вход
                </a>
                <a href="/register" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i>
                    Регистрация
                </a>
            <% } %>
        </div>
    </div>
</header>

<style>
.main-header .navbar-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.main-header .nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.main-header .dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.main-header .material-icons {
    font-size: 1.25rem;
}
</style>

<!-- Чат с администрацией -->
<% if (user) { %>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="chatOffcanvas">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Чат с администрацией</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <div class="chat-messages" id="chatMessages">
                <!-- Сообщения будут добавляться динамически -->
            </div>
            <form id="chatForm" class="mt-3">
                <div class="input-group">
                    <input type="text" class="form-control" id="messageInput" placeholder="Введите сообщение...">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-send"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
<% } %> 