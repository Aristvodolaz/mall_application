<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/cinema.css">
</head>
<body>
    <%- include('../../partials/header') %>

    <div class="movie-details-page">
        <div class="container">
            <div class="page-header">
                <h1 class="page-title"><%= movie.title %></h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Главная</a></li>
                        <li class="breadcrumb-item"><a href="/cinema">Кинотеатр</a></li>
                        <li class="breadcrumb-item active"><%= movie.title %></li>
                    </ol>
                </nav>
            </div>

            <div class="movie-content">
                <div class="row">
                    <div class="col-md-4">
                        <div class="movie-poster">
                            <img src="<%= movie.poster_url || '/images/movies/default.jpg' %>" alt="<%= movie.title %>" class="img-fluid">
                            <% if (movie.is_new) { %>
                                <div class="movie-badge new">Новинка</div>
                            <% } %>
                            <% if (movie.coming_soon) { %>
                                <div class="movie-badge coming-soon">Скоро</div>
                            <% } %>
                            <% if (movie.age_restriction) { %>
                                <div class="age-badge"><%= movie.age_restriction %>+</div>
                            <% } %>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="movie-info">
                            <h2 class="movie-title">
                                <%= movie.title %>
                                <% if (movie.original_title) { %>
                                    <small class="text-muted"><%= movie.original_title %></small>
                                <% } %>
                            </h2>
                            
                            <div class="movie-meta">
                                <% if (movie.duration) { %>
                                    <span><i class="bi bi-clock"></i> <%= movie.duration %> мин.</span>
                                <% } %>
                                <% if (movie.genre) { %>
                                    <span><i class="bi bi-tag"></i> <%= movie.genre %></span>
                                <% } %>
                                <% if (movie.release_date) { %>
                                    <span><i class="bi bi-calendar"></i> <%= new Date(movie.release_date).toLocaleDateString('ru-RU') %></span>
                                <% } %>
                                <% if (movie.director) { %>
                                    <span><i class="bi bi-person"></i> <%= movie.director %></span>
                                <% } %>
                            </div>

                            <div class="movie-description">
                                <p><%= movie.description || 'Описание отсутствует' %></p>
                            </div>

                            <% if (movie.cast) { %>
                                <div class="movie-cast">
                                    <h3>В ролях</h3>
                                    <p><%= movie.cast %></p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <div class="screenings-section mt-5">
                    <h2>Расписание сеансов</h2>
                    
                    <% if (Object.keys(screeningsByDate).length > 0) { %>
                        <div class="screenings-tabs">
                            <ul class="nav nav-tabs" id="screeningsTabs" role="tablist">
                                <% Object.keys(screeningsByDate).forEach((date, index) => { %>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link <%= index === 0 ? 'active' : '' %>" 
                                                id="date-<%= index %>-tab" 
                                                data-bs-toggle="tab" 
                                                data-bs-target="#date-<%= index %>" 
                                                type="button" 
                                                role="tab">
                                            <%= date %>
                                        </button>
                                    </li>
                                <% }); %>
                            </ul>

                            <div class="tab-content mt-4" id="screeningsTabsContent">
                                <% Object.keys(screeningsByDate).forEach((date, index) => { %>
                                    <div class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" 
                                         id="date-<%= index %>" 
                                         role="tabpanel">
                                        <div class="screenings-grid">
                                            <% screeningsByDate[date].forEach(screening => { %>
                                                <div class="screening-card">
                                                    <div class="screening-time">
                                                        <%= screening.formattedTime %>
                                                    </div>
                                                    <div class="screening-info">
                                                        <div class="screening-hall">Зал <%= screening.hall %></div>
                                                        <div class="screening-format">
                                                            <% if (screening.is_imax) { %>
                                                                IMAX
                                                            <% } else if (screening.is_3d) { %>
                                                                3D
                                                            <% } else { %>
                                                                2D
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    <div class="screening-prices">
                                                        <div class="price-item">
                                                            <span class="price-label">Обычный:</span>
                                                            <span class="price-value"><%= screening.base_price %> ₽</span>
                                                        </div>
                                                        <div class="price-item">
                                                            <span class="price-label">VIP:</span>
                                                            <span class="price-value"><%= screening.vip_price %> ₽</span>
                                                        </div>
                                                        <div class="price-item">
                                                            <span class="price-label">Студенческий:</span>
                                                            <span class="price-value"><%= screening.student_price %> ₽</span>
                                                        </div>
                                                        <div class="price-item">
                                                            <span class="price-label">Детский:</span>
                                                            <span class="price-value"><%= screening.child_price %> ₽</span>
                                                        </div>
                                                    </div>
                                                    <a href="/cinema/screening/<%= screening.id %>" class="btn btn-primary btn-buy-ticket">
                                                        Купить билет
                                                    </a>
                                                </div>
                                            <% }); %>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="no-screenings">
                            <i class="bi bi-calendar-x"></i>
                            <p>Нет доступных сеансов на ближайшие дни</p>
                        </div>
                    <% } %>
                </div>

                <% if (movie.trailer_url) { %>
                    <div class="movie-trailer mt-5">
                        <h2>Трейлер</h2>
                        <div class="ratio ratio-16x9">
                            <iframe src="<%= movie.trailer_url %>" allowfullscreen></iframe>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 