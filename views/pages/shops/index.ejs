<%- include('../../partials/header') %>

<main class="main">
    <div class="container">
        <h1 class="page-title">Магазины</h1>
        
        <div class="shops-grid">
            <% if (shops && shops.length > 0) { %>
                <% shops.forEach(shop => { %>
                    <div class="shop-card">
                        <% if (shop.image_url) { %>
                            <div class="shop-logo">
                                <img src="<%= shop.image_url %>" alt="<%= shop.name %>">
                            </div>
                        <% } %>
                        <div class="shop-info">
                            <h3 class="shop-name"><%= shop.name %></h3>
                            <p class="shop-category"><%= shop.category %></p>
                            <% if (shop.floor) { %>
                                <p class="shop-floor">Этаж: <%= shop.floor %></p>
                            <% } %>
                            <% if (shop.working_hours) { %>
                                <p class="shop-hours">Часы работы: <%= shop.working_hours %></p>
                            <% } %>
                            <% if (shop.phone) { %>
                                <p class="shop-phone">Телефон: <%= shop.phone %></p>
                            <% } %>
                            <% if (shop.description) { %>
                                <p class="shop-description"><%= shop.description %></p>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-content">
                    <p>В данный момент нет доступных магазинов</p>
                </div>
            <% } %>
        </div>
    </div>
</main>

<%- include('../../partials/footer') %> 